        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "declaration": true,
        "declarationDir": "dist",
        "typeRoots": ["./types"],
        "removeComments": false,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ]
}